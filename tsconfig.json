{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",   
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["shared/*"],
      "@src/*": ["src/*"],
      "@api/*": ["api/*"]
    }
  },
  "include": ["src/**/*", "api/**/*", "shared/**/*"]
}
